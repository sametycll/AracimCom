@model EntitiyLayer.Concrete.Category
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Kategori Güncelleme</h2>
@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
{
    @Html.Label("Kategori ID")
    @Html.TextBoxFor(x=>x.CategoryID, new{@class="form-control", @readonly = true})

    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=>x.CategoryName, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryName,"" ,new {@class ="text-danger"})
        <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextBoxFor(x=>x.CategoryDescription, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryDescription,"",new {@class ="text-danger"})
        <br />
        <button class="btn btn-success">Kategoriyi Güncelle</button>

}
