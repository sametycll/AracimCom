@model EntitiyLayer.Concrete.User

@{
    ViewData["Title"] = "UpdateUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Kullanıcı Bilgilerini Güncelle</h2>
@using (Html.BeginForm("UpdateUser", "Users", FormMethod.Post))
{
    @Html.Label("Kullanıcı ID")
    @Html.TextBoxFor(x=>x.UserID, new{@class="form-control", @readonly = true})

    @Html.Label("Ad Soyad")
    @Html.TextBoxFor(x=>x.UserName, new{@class="form-control"})
    @*@Html.ValidationMessageFor(x=>x.CategoryName,"" ,new {@class ="text-danger"})*@
            <br />
    @Html.Label("Mail")
    @Html.TextBoxFor(x=>x.UserMail, new{@class="form-control"})
    @*@Html.ValidationMessageFor(x=>x.CategoryDescription,"",new {@class ="text-danger"})*@
            <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x=>x.UserPassword, new{@class="form-control"})
        <br />
    @Html.Label("Telefon")
    @Html.TextBoxFor(x=>x.UserPhone, new{@class="form-control"})
            <br />
        <button class="btn btn-info">Kullanıcıyı Güncelle</button>

}

