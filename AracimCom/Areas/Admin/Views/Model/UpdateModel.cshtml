@model EntitiyLayer.Concrete.Model
@{
    ViewData["Title"] = "UpdateSeries";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Model Güncelleme</h2>
@using (Html.BeginForm("UpdateModel", "Model", FormMethod.Post))
{
    @Html.Label("Model ID")
    @Html.TextBoxFor(x=>x.ModelID, new{@class="form-control", @readonly = true})

    @Html.Label("Model Adı")
    @Html.TextBoxFor(x=>x.ModelName, new{@class="form-control"})
    @Html.ValidationMessageFor(x=>x.ModelName,"" ,new {@class ="text-danger"})
                    <br />
    @Html.Label("Seri")
    @Html.DropDownListFor(x=>x.SeriesID,(List<SelectListItem>)ViewBag.sv, new{@class="form-control"})

         <br />
         <button class="btn btn-success">Model Güncelle</button>

}

